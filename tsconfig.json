{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "lib",
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "allowJs": true,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "typeRoots": ["./src/types", "./node_modules/@types"],
  },
  "include": [
    "src"
  ],
  "exclude": [
    "lib",
    "node_modules",
  ]
}
